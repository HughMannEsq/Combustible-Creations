@page
@model AutumnRidgeUSA.Pages.HashGenModel
@{
    ViewData["Title"] = "Hash Generator";
}

<div class="container mt-4">
    <h2>Password Hash Generator</h2>

    <form method="post">
        <div class="mb-3">
            <label class="form-label">Password to Hash:</label>
            <input type="text" name="password" class="form-control" value="TestPassword123!" />
        </div>
        <button type="submit" class="btn btn-primary">Generate Hash</button>
    </form>

    @if (Model.Salt != null && Model.Hash != null)
    {
        <div class="mt-4 alert alert-success">
            <h4>Copy these values to SQLite Studio:</h4>
            <p><strong>Salt:</strong></p>
            <textarea class="form-control mb-2" rows="2" readonly>@Model.Salt</textarea>

            <p><strong>PasswordHash:</strong></p>
            <textarea class="form-control mb-2" rows="3" readonly>@Model.Hash</textarea>

            <p><strong>SQL Insert Statement:</strong></p>
            <textarea class="form-control" rows="8" readonly>INSERT INTO Users (Email, PasswordHash, Salt, FirstName, LastName, Role, IsConfirmed, UserId, CreatedAt) VALUES ('admin@test.com', '@Model.Hash', '@Model.Salt', 'Admin', 'User', 'Admin', 1, '0001-ADM', datetime('now'));</textarea>
        </div>
    }
</div>